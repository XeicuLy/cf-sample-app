{
  "name": "backend",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "deploy:preview": "wrangler deploy --minify --env=preview",
    "deploy:production": "wrangler deploy --minify --env=production",
    "migrate:dev": "wrangler d1 migrations apply db-local --local",
    "migrate:preview": "wrangler d1 migrations apply db-preview --env=preview --remote",
    "migrate:production": "wrangler d1 migrations apply db-production --env=production --remote",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "typecheck": "pnpm run cf-typegen && tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-openapi": "1.1.5",
    "better-auth": "1.4.5",
    "drizzle-orm": "0.45.1",
    "hono": "4.11.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@hono/swagger-ui": "0.5.2",
    "@types/sql.js": "1.4.9",
    "drizzle-kit": "0.31.8",
    "sql.js": "1.13.0",
    "wrangler": "4.54.0"
  }
}
